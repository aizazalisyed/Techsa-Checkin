<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TECHSA CHACK IN"
        android:textSize="18sp"
        style="@style/TextAppearance.Material3.HeadlineLarge"
        android:textColor="@color/purple_soothing"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/ic_baseline_not_listed_location_24"
        android:drawableTint="@color/purple_soothing"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/temprature"
        android:text="temp"
        android:textSize="14sp"
        android:layout_marginStart="40dp"
        android:textStyle="bold"
        android:layout_below="@id/logo"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/ic_baseline_wb_sunny_24"
        android:drawablePadding="5dp"
        android:drawableTint="@color/quantum_yellow"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/condition"
        android:text="condition"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_below="@id/temprature"
        android:layout_marginTop="5dp"
        android:drawableStart="@drawable/ic_baseline_tsunami_24"
        android:drawablePadding="5dp"
        android:drawableTint="@color/green"
        android:layout_alignLeft="@id/temprature"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkin_time"
        android:text="check in time"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_below="@id/condition"
        android:layout_marginTop="5dp"
        android:drawableStart="@drawable/ic_baseline_timer_24"
        android:drawablePadding="5dp"
        android:drawableTint="@color/gray"
        android:layout_alignLeft="@id/temprature"
        />
<EditText
    android:id="@+id/checkInEditText"
    android:padding="5dp"
    android:hint="Enter check in purpose..."
    android:textSize="14sp"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/input_background"
    android:layout_below="@id/checkin_time"
    android:layout_marginTop="20dp"
    android:gravity="top"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@id/checkInEditText"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/purple_soothing"
        android:text="cancel"
        android:layout_alignParentStart="true"
        android:layout_alignLeft="@id/checkInEditText"
        />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@id/checkInEditText"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/purple_soothing"
        android:text="Save"
        android:layout_alignParentEnd="true"
        android:layout_alignRight="@id/checkInEditText"
        />

</RelativeLayout>
